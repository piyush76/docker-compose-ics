# Production Environment Configuration
# Copy this file to .env and update with your actual values

# Azure Container Registry Configuration
# Set these values in your actual .env file (not committed to git)
ACR_USERNAME=your-acr-username
ACR_PASSWORD=your-acr-password
ACR_REGISTRY=incora.azurecr.io

# Database Configuration - External Oracle Database - REQUIRED
TCMIS_DB_SECRET=your-secure-production-password
# Note: ORACLE_ROOT_PASSWORD not needed for external database

# Production specific settings
ENVIRONMENT=production
LOG_LEVEL=WARN

# Image tags for production (use stable/versioned tags)
ICS_SERVICE_IMAGE_TAG=stable
ORACLE_IMAGE_TAG=21.3.0-xe

# External database connection
PROD_DB_HOST=infdev-ora01a.tcmis.com
PROD_DB_PORT=1521
PROD_DB_SERVICE=ICSDEV
PROD_DB_USERNAME=tcm_ops

# Azure AD Configuration (Production)
AZURE_AD_TENANT_ID=your-prod-tenant-id
AZURE_AD_CLIENT_SECRET=your-prod-client-secret

# Production URLs
PROD_BASE_URL=https://your-production-domain.com
PROD_MANAGEMENT_URL=https://your-production-domain.com:9091

# Security and Performance
JAVA_OPTS=-Xms2g -Xmx4g -XX:+UseG1GC
ENABLE_JMX=false
ENABLE_DEBUG=false

# Monitoring Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your-secure-grafana-password
PROMETHEUS_RETENTION=720h
LOKI_RETENTION=720h

# Backup and Monitoring
BACKUP_SCHEDULE=0 2 * * *
MONITORING_ENABLED=true
ALERTS_EMAIL=admin@yourcompany.com
